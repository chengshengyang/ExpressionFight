<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/littlegray"
        app:tabSelectedTextColor="@color/textwhite"
        android:background="@color/colorPrimary">

        <android.support.design.widget.TabItem
            android:id="@+id/ti_choiceness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精选" />

        <android.support.design.widget.TabItem
            android:id="@+id/ti_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="热门" />

        <android.support.design.widget.TabItem
            android:id="@+id/ti_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最新" />

        <android.support.design.widget.TabItem
            android:id="@+id/ti_personage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人物" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tl_top" />
</RelativeLayout>
