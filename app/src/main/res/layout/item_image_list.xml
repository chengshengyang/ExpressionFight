<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_listview_item"
    android:layout_marginBottom="@dimen/line_height_1"
    android:gravity="center_vertical|left" >
    
    <ImageView
        android:id="@+id/album_iv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/descr_image" />

    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/littleMargin"
        android:orientation="vertical"
        android:gravity="center_vertical">
        
        <TextView 
            android:id="@+id/album_name_tv"
            style="@style/bigBlackText"/>
        
        <TextView 
            android:id="@+id/album_count_tv"
            style="@style/middleBlackText"
            android:layout_marginTop="@dimen/basicMargin"
            android:textColor="@color/lightgrey"/>
    </LinearLayout>
</LinearLayout>
