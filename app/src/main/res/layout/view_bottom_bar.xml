<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/listview_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.csy.fight.widget.TabItem
            android:id="@+id/tab_item_main_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/main_selector_home_page"
            app:tab_item_count="0"
            app:tab_item_label="表情" />

        <com.csy.fight.widget.TabItem
            android:id="@+id/tab_item_main_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/main_selector_discover"
            app:tab_item_count="0"
            app:tab_item_label="发现" />

        <com.csy.fight.widget.TabItem
            android:id="@+id/tab_item_main_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/main_selector_notice"
            app:tab_item_count="1"
            app:tab_item_label="消息" />

        <com.csy.fight.widget.TabItem
            android:id="@+id/tab_item_main_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/main_selector_me"
            app:tab_item_count="0"
            app:tab_item_label="我的" />
    </LinearLayout>
</LinearLayout>